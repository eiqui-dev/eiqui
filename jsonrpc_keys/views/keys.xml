<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- FORM -->	
	    <record id="jsonrpc_keys_form" model="ir.ui.view">
	        <field name="name">JSON-RPC Keys</field>
	        <field name="model">jsonrpc.keys</field> 
	        <field name="type">form</field>       
	        <field name="arch" type="xml">
	           	<form string="JSON-RPC Key">
	           		<sheet>
	           		    <label for="key"/>
	                    <div name="key_sect">
	                        <field name="key" class="oe_inline" />
	                        <button colspan="1" name="generate_key" string="Generate Key" type="object" icon="gtk-edit" class="oe_inline"/>
	                    </div>
	                    
	                    <group>
				        	<field name="user_id" />
				        	<field name="actived" />
				        	<field name="json_rpc_routes_ids">
				        		<tree create="true" editable="bottom/top">
				        			<field name="url" />
				        			<field name="uses" readonly="True"/>
				        		</tree>
				        	</field>
				        	<field name="uses" />
			        	</group>
		        	</sheet>
		        	<div class="oe_chatter">
                    	<field name="message_follower_ids" widget="mail_followers"/>
                    	<field name="message_ids" widget="mail_thread"/>
               	 	</div>
	           	</form>
	        </field>
	    </record>
	    
		<!-- TREE -->
	 	<record id="jsonrpc_keys_tree" model="ir.ui.view">
	 		<field name="name">JSON-RPC Keys</field>
	 		<field name="model">jsonrpc.keys</field>	 		
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="JSON-RPC Keys">
		           	<field name="key" />
			        <field name="user_id" />
			        <field name="actived" />
				</tree>
			</field>
	</record>
	
    </data>
</openerp>
<?xml version="1.0"?>
<openerp>
<data>

	<template id="generic_footer">
		<div class="col-md-12 col-xs-12 company-addr" t-if="o.company_id.custom_footer">
			<span t-field="o.company_id.rml_footer" />
		</div>
		<div class="col-md-12 col-xs-12 text-muted" style="font-size:small;">
			<div class="col-md-6 col-xs-6" id="left_footer"></div>
			<div class="col-md-6 col-xs-6" style="text-align:right;">
				Page <span class="page"/> of <span class="topage"/>
			</div>
		</div>
	</template>

	<template id="external_layout_footer">
		<div class="footer col-md-12 col-xs-12">
			<t t-call="sale_order_chapters.generic_footer"/>
		</div>
	</template>

</data>

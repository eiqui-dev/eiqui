<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		
	   <record model = "ir.ui.view" id = "create_new_quotation_split_ept">
			<field name = "name">create.new.quotation.ept</field>
			<field name = "model">quotation.split</field>
		    <field name="type">form</field> 
			<field name = "arch" type = "xml">
				<form name="quotation" >
					<group groups="sale.group_sale_split">
						<group>
							<field name="partner_id" domain="[('customer','=',True)]" required="1" string = "Cliente" />
						</group>
						<group>
							<field name="pricelist_id" string ="Tarifa"/>
						</group>
					</group>
					<button name = "confirm_quotation_split" string = "Dividir Presupuesto" type = "object" class = "oe_highlight"/>
					<button name = "confirm_quotation_split_view" string = "Dividir y abrir nuevo presupuesto" type = "object" class = "oe_highlight"/>
					<button string = "Cancel" class = "oe_link" special = "cancel"/>   
				
				</form>  
			</field>
		</record>
		
	</data>
</openerp>
